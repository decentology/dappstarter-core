{
  "name": "solidity",
  "title": "Solidity",
  "description": "",
  "imageUrl": "",
  "help": {
    "title": "",
    "url": ""
  },
  "blockchains": ["ethereum", "matic", "conflux"],
  "interface": {
    "hidden": false,
    "enabled": true,
    "children": "none"
  },
  "targets": {
    "*": {
      "/package.project.json": {
        "processor": "copy-file"
      },
      "/~languages/solidity/packages/dapplib/contracts/DappState.sol": {
        "processor": "merge-blocks",
        "path": "${categoryFolder}/${name}/solidity/${name}.sol"
      },
      "/~languages/solidity/packages/dapplib/contracts/DappLib.sol": {
        "processor": "merge-blocks",
        "path": "${categoryFolder}/${name}/solidity/${name}-lib.sol"
      },
      "/~languages/solidity/packages/dapplib/contracts/[import]": {
        "processor": "merge-block-folders",
        "path": "${categoryFolder}/${name}/solidity/"
      },
      "/~languages/solidity/packages/dapplib/tests/[block-tests].js": {
        "processor": "file-blocks",
        "path": "${categoryFolder}/${name}/${name}-tests.js",
        "sequence": false
      },
      "/~languages/solidity/packages/dapplib/tests/[block-tests-1].js": {
        "processor": "file-blocks",
        "path": "${categoryFolder}/${name}/${name}-behavior-tests.js",
        "sequence": false
      },
      "/~languages/solidity/packages/dapplib/tests/[block-tests-2].js": {
        "processor": "file-blocks",
        "path": "${categoryFolder}/${name}/${name}-interface-tests.js",
        "sequence": false
      },
      "/~languages/solidity/packages/dapplib/migrations/2_deploy_contracts.js": {
        "processor": "merge-blocks",
        "path": "${categoryFolder}/${name}/${name}-config.js"
      },
      "/~languages/solidity/packages/dapplib/truffle-config.js": {
        "processor": "copy-file",
        "context": "blockchain",
        "actions": ["accounts"]
      },
      "/README.md": {
        "processor": "filter"
      },
      "/packages/client/README.md": {
        "processor": "filter"
      },
      "/packages/client/.babelrc": {
        "processor": "filter"
      },
      "/packages/dapplib/src/dapp-lib.js": {
        "processor": "merge-blocks",
        "path": "${categoryFolder}/${name}/${name}-lib.js"
      },
      "/packages/client/src/pages/harness/[block-pages].js": {
        "processor": "file-blocks",
        "path": "${categoryFolder}/${name}/${name}-page.js",
        "sequence": false
      },
      "/packages/client/src/[client-app]": {
        "processor": "copy-folder",
        "context": "framework"
      },
      "/packages/client/src/pages/harness/harness.js": {
        "processor": "replace-parameters"
      },
      "/packages/dapplib/src/[blockchain]": {
        "processor": "copy-folder",
        "context": "blockchain"
      },      
      "/packages/server/src/modules/dapp/dapp.controller.ts": {
        "processor": "merge-blocks",
        "path": "${categoryFolder}/${name}/${name}-api.js"
      },
      "/packages/server/src/modules/dapp/dapp.service.ts": {
        "processor": "merge-blocks",
        "path": "${categoryFolder}/${name}/${name}-api.js"
      },      
      "/packages/server/src/modules/admin/admin.controller.ts": {
        "processor": "merge-blocks",
        "path": "${categoryFolder}/${name}/${name}-api.js"
      },
      "/packages/server/src/modules/admin/admin.service.ts": {
        "processor": "merge-blocks",
        "path": "${categoryFolder}/${name}/${name}-api.js"
      },
      "/packages/dapplib/package.json": {
        "processor": "merge-json",
        "framework": {},
        "blockchain": {
          "*": {
          },
          "ethereum": {
            "scripts": {
              "dev": "run-p ganache deploy",
              "deploy": "wait-on tcp:7545 && watch \"truffle migrate --reset\" contracts",
              "ganache": "node src/ganache.js",
              "test": "npx truffle test"
            },
            "Exdependencies": {
              "web3": "^1.2.6",
              "web3-providers": "^1.0.0-beta.55"
            },
            "devDependencies": {
              "@truffle/hdwallet-provider": "1.2.3",
              "truffle": "^5.1.19",
              "@types/ethereum-protocol": "^1.0.0",
              "@types/web3": "^1.2.2",
              "ganache-cli": "^6.9.1",
              "@openzeppelin/test-helpers": "^0.5.10"           
            }
          },
          "matic": {
            "scripts": {
              "dev": "run-p deploy",
              "deploy": "wait-on faucet & truffle compile && truffle migrate --reset",
              "test": "npx truffle test",
              "faucet": "node ./src/faucet",
              "postinstall": "node ./src/faucet"
            },
            "devDependencies": {
              "@truffle/hdwallet-provider": "^1.2.3",
              "truffle": "^5.1.19",
              "@types/ethereum-protocol": "^1.0.0",
              "@types/web3": "^1.2.2"
            }
          },
          "conflux": {
            "scripts": {
              "clean": "rimraf -rf build && rimraf -rf dist",
              "dev": "run-s faucet-admin deploy",
              "deploy": "npx conflux-truffle compile && npx conflux-truffle migrate --reset && node ./src/faucet",
              "test": "npx conflux-truffle test",
              "faucet": "node ./src/faucet",
              "faucet-admin": "node ./src/faucet 1"
            },
            "devDependencies": {
              "conflux-truffle": "^0.0.8",
              "js-conflux-sdk": "^1.5.10",
              "ethers": "^5.0.26",
              "@openzeppelin/test-helpers": "^0.5.10"   
            }
          }
        },
        "block": {
          "*": {},
          "file_storage:core-ipfs": {
            "devDependencies": {
              "ipfs-http-client": "44.0.3",
              "bs58": "^4.0.1"
            }
          }
        }
      },
      "/packages/client/package.json": {
        "processor": "merge-json",
        "blockchain": {},
        "framework": {
          "*": {},
          "react": {
            "devDependencies": {
              "@babel/preset-react": "^7.9.4",
              "react": "^16.13.0",
              "react-dom": "^16.13.0"
            }
          },
          "vanilla": {
          }
        }
      }
    }
  }
}
